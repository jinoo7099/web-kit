<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="../public/css/todo.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <title>Todo</title>
</head>
<body>
    <div>
        <form action="/logout_process" method="GET">
            <input type="submit" value="logout" class="btn-logout"/>
        </form>
    </div>

    <div class="title">
        <h1> Todo List </h1>
    </div>
    <div id="todo-list">
        <div id="Todo" class="todo">
            <h2> todo </h2>
            <% for(let i = 0; i < todo.length; i++) { %>
            <p>
                <span><%= todo[i].name %></span> 
                <span><%= todo[i].date %></span>
                <button class='btn-delete'>delete</button>
                <button class='btn-update'>---></button>
            </p>
            <% } %>
        </div>

        <div id="Doing" class="doing">
            <h2> doing </h2>

            <% for(let i = 0; i < doing.length; i++) { %>
            <p>
                <span><%= doing[i].name %></span> 
                <span><%= doing[i].date %></span>
                <button class='btn-delete'>delete</button>
                <button class='btn-update'>---></button>
            </p>
            <% } %>

        </div>


        <div id="Done" class="done">
            <h2> done </h2>
            
            <% for(let i = 0; i < done.length; i++) { %>
            <p>
                <span><%= done[i].name %></span> 
                <span><%= done[i].date %></span>
                <button class='btn-delete'>delete</button>
                <button class='btn-update'>---></button>
            </p>
            <% } %>
            
        </div>

        <br><br>
        
        <div class="add-button-wrap">
            
            <input class="input-task" type="text" placeholder="write task"/><br>
            <button class="btn-add">Add Task</button>

        </div>
    </div>

    <script src="../public/js/todo.js"></script>

</body>
</html>